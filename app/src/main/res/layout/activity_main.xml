<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navajo_white"
    android:orientation="vertical">

    <com.trackcolorview.test.trackcolorview.CustomScrollTab
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:shouldExpand="false"
        app:tabPaddingLeftRight="10dp"
        app:textChangeColor="@color/MyDarkRed"
        app:textOriginColor="@color/black"
        app:textSize="18sp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>
